{
    "manifest_version":3,
    "name":"Quick Canvas",
    "version":"0.4.0",
    "description":"Quick Solution for downloading a canvas",
    "author": {
        "email": "rafaelsaespalaria@gmail.com"
    },
    "icons":{
        "128":"icons/128.png",
        "48":"icons/48.png",
        "16":"icons/16.png"
    },
    "action": {
        "default_title":"Quick Canvas",
        "default_popup":"pages/popup.html",
        "default_icon":{
            "128":"icons/128.png",
            "48":"icons/48.png",
            "16":"icons/16.png"
        }
    },
    "options_ui": {
        "page":"pages/options.html",
        "style":true,
        "type":"module"
    },
    "content_scripts":[
        {
            "matches":["<all_urls>"],
            "js":["scripts/content.js"]
        }
    ],
    "background":{
        "service_worker":"scripts/pageEvent.js",
        "type":"module",
        "persistant":false
    },
    "permissions": ["tabs","storage"]
}